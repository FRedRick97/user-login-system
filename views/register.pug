extends layout

include ./mixins

block content
    h1 Register
    p please register using the form below
    ul.errors
        if errors
            each error, i in errors
                li.alert.alert-danger #{error.msg}
    form(method='post', action='/users/register', enctype='multiparts/form-data')
        +form("Name", "name", "text", "Enter Name")
        +form("Email", "email", "email", "Enter Email")
        +form("Username", "username", "text", "Username")
        +form("Password", "password", "password", "Enter Password")
        +form("Confirm Password", "password2", "password", "Confirm Password")
        +form("Profile Image", "profileimage", "file")
        input.btn.btn-default(name="submit", type="submit", value="Register")